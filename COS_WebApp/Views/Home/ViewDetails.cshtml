<body>
    <div class="container-fluid">
        <header class="page-header">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark font-weight-bolder" style="
        padding-left: 3%;
        padding-right: 3%;
        background: linear-gradient(55deg, rgba(255,195,186,1) 0%, rgba(255,97,136,1) 63%, rgba(255,190,218,1) 100%);">

                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/Main/img/chef512.png" width="50" height="50">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <div class="">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Category
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    @foreach (var type in Model.Product_Type)
                                    {

                                        <a class="dropdown-item" href="@Url.Action("ShowCate", "Home", new { @id = type.id})">@type.name</a>
                                    }
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="text-right">
                    @Html.ActionLink("Profile", "ChangeInfor", "Authentication")
                    <a href="@Url.Action("Cart", "Cart")" class="btn font-weight-bold" style="background: white; margin-left: 1rem;"><i class="fa fa-shopping-cart" aria-hidden="true"></i> My Cart</a>
                </div>
            </nav> <!-- End mainmenu area -->
        </header>

        <div class="limiter">
            <div class="container-login100" style="width: 100%; min-height: 89.8vh;">
                <div class="wrap-login100" style="padding: 100px 130px 33px 95px;">
                    <div class="login100-pic text-center">
                        @{
                            var imgSrc = String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.Product.image));
                        }
                        <img src="@imgSrc" class="img-fluid" alt="ProductsPicture" style="object-fit:contain;" />
                    </div>
                    <form class="login100-form">
                        <p style="font-family: Pacifico; font-size:36px; margin-bottom:2%;">@Model.Product.name</p>
                        <p class="text-break" style=" font-size:20px; margin-bottom:2%;"><b>Ingredient:</b> @Model.Product.ingredient</p>
                        <p class="text-break" style="margin-bottom:2%; font-size:20px"><b>Volume: </b> @Model.Product.volume</p>
                        <p class="text-break" style="margin-bottom:2%; font-size:20px"><b>Type:</b> @Model.Product.products_type.name</p>
                        <p class="text-break" style="margin-bottom:2%; font-size:20px"><b>Origin:</b> @Model.Product.origin.name</p>
                        <p class="text-break" style="margin-bottom:2%; font-size:20px"><b>Company:</b> @Model.Product.company.name</p>
                        <p class="text-break" style="margin-bottom:2%; font-size:20px"><b>Sugar Level:</b> @Model.Product.sugar_level.name</p>
                        <p class="text-break" style="margin-bottom:2%; font-size:20px">
                            <b>Price:</b> @{
                                var price = String.Format("{0:0,0}", Model.Product.price);
                            } @price VND
                        </p>
                        <div class="container-login100-form-btn" style="margin-top:2%; margin-bottom: 6%">
                            <a href="@Url.Action("AddToCart", "Home", new { @id = Model.Product.id })" class="login100-form-btn">
                                Add To Card
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

