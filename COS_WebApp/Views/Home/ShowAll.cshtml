@using COS_WebApp.Controllers
@model dynamic
@using COS_WebApp.Models;

@*@{
        ViewBag.Title = "View";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@
<!DOCTYPE html>
<!--
    ustora by freshdesignweb.com
    Twitter: https://twitter.com/freshdesignweb
