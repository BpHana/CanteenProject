@model COS_WebApp.Models.account
   @using COS_WebApp.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/Content/ChangeInfor/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/Content/ChangeInfor/css/style.css">
</head>

<body>

    <div class="wrapper" style="background-image: url('~/Content/ChangeInfor/images/bg-registration-form-1.jpg');">
        <div class="inner">
            <div class="image-holder">
                <img src="~/Content/ChangeInfor/images/registration-form-1.jpg" alt="">
            </div>
            <form action="@Url.Action("Register","Authentication")" method="POST">
           
                <h3>Profile</h3>
                <div class="form-wrapper">

                    @*@Html.EditorFor(model => ((Session["User"] as account).fullname), new { htmlAttributes = new { @class = "form-control", @name = "fullname", @id = "fullname", @placeholder = "Full Name" } })
        @Html.ValidationMessageFor(model => ((Session["User"] as account).fullname), "", new { @style = "color: red" })*@
                    @Html.EditorFor(model => model.fullname, new { htmlAttributes = new { @class = "input--style-3", @name = "fullname", @id = "fullname", @placeholder = "Full Name" } })
                    @Html.ValidationMessageFor(model => model.fullname, "", new { @style = "color: red" })
                    <i class="zmdi zmdi-account"></i>
                </div>
                <div class="form-wrapper">

                    @*@Html.EditorFor(model =>   ((Session["User"] as account).email), new { htmlAttributes = new { @class = "form-control", @name = "email", @id = "email", @placeholder = "Email" } })
        @Html.ValidationMessageFor(model => model.email, "", new { @style = "color: red" })*@
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "input--style-3", @name = "email", @id = "email", @placeholder = "Email" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @style = "color: red" })
                    <i class="zmdi zmdi-email"></i>
                </div>
                <div class="form-wrapper">
                    @{ 
                        string dob = ((Session["User"] as account).birthday.ToString("yyyy-MM-dd"));
                    }
                    @Html.EditorFor(model => @dob, new { htmlAttributes = new { @class = "form-control", @placeholder = "Birthday", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.birthday, "", new { @style = "color: red" })
                
                </div>
                <div class="form-wrapper">
                    @Html.EditorFor(model =>   ((Session["User"] as account).phonenumber), new { htmlAttributes = new { @class = "form-control", @name = "phone", @type = "text", @id = "phone", @placeholder = "Phone number" } })
                    @Html.ValidationMessageFor(model => model.phonenumber, "", new { @style = "color: red" })
                    <i class="zmdi zmdi-lock"></i>
                </div>
              
                <button>
                   Save
                    <i class="zmdi zmdi-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>